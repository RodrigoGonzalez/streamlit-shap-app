# Check http://editorconfig.org for more information

# top-most .editorconfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space

[*.py]
indent_size = 4

[Makefile]
indent_style = tab
max_line_length = off

[*.md]
indent_size = 4

[*.{yaml,yml}]
indent_size = 4
